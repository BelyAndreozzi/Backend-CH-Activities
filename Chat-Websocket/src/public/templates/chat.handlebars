{{#if mensajes}}
    {{#each mensajes}}
        <p class="message-main"><span style="color:blue"><b>{{this.email}}</b></span>
        <span style="color:brown"> {{this.date}}</span>
        <span style="color:green"><i>{{this.message}}</i> </span></p>
    {{/each}}
{{else}}
<p>Se el primero en hablar :D</p>
{{/if}}